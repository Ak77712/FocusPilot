{
  "manifest_version": 3,
  "name": "FocusPilot",
  "description": "AI-assisted, privacy-first Chrome co-pilot for staying focused.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "idle",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
